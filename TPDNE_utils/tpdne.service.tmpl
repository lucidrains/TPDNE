[Unit]
Description=TPDNE
After=syslog.target
After=network.target

[Service]
Type=simple

# set user and group
User=root
Group=root

# configure location
WorkingDirectory={{ working_directory }}
ExecStart={{ python_executable }} {{ script_path }}

Restart=always
RestartSec=15

[Install]
WantedBy=multi-user.target
